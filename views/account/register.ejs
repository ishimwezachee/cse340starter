<h1><%= title %></h1>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>
<div class="form_div">
    <form action="/account/register" method = "POST" class="login-form">
      <label for="first-name">First Name</label>
      <input type="text" class="email" name="account_firstname">
      <label for="last-name">Last Name</label>
      <input type="text" class="password" name="account_lastname" required>
      <label for="email">Email:</label>
      <input type="email" class="email" name="account_email" required>
      <label for="password">Password:</label>
      <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
      <input type="password" name="account_password" class="password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
      <button type="submit">Register</button>
    </form>
</div>


