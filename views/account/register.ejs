<h1><%= title %></h1>
<div class="form_div">
    <form action="account/register" method = "post" class="login-form">
      <label for="first-name">First Name</label>
      <input type="text" class="email" name="email" required>
      <label for="last-name">Last Name</label>
      <input type="text" class="password" name="password" required>
      <label for="email">Email:</label>
      <input type="email" class="email" name="email" required>
      <label for="password">Password:</label>
      <input type="password" class="password" name="password" required>
      <button type="submit">Register</button>
    </form>
    <p class="signUp">No account? <a href="/account/register">Sign up</a></p>
</div>


